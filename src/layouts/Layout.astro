---
import Navigation from '../components/core/Navigation.astro';
import type { ProfileContentfulInterface } from '../lib/contentful';
import type { NavigationLayoutEnum } from '../types/enum';

export interface Props {
  layout: NavigationLayoutEnum;
  navigationLinks?: Array<ProfileContentfulInterface>;
}

const { layout, navigationLinks } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr-FR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>Azerty Keycaps by Plaketdebeur</title>
  </head>
  <body>
    <Navigation layout={layout} navigationLinks={navigationLinks} />
    <main>
      <slot name="main" />
    </main>
    <slot name="footer" />
  </body>
</html>
<style is:global>
  html {
    @apply h-full scroll-smooth bg-slate-50 font-sans antialiased dark:bg-slate-900;
  }

  body {
    @apply min-h-full;
  }
</style>

<style>
  main {
    @apply relative mx-auto mt-16 max-w-7xl space-y-6 py-6 px-6 sm:px-6 lg:space-y-10 lg:px-8;
  }
</style>
