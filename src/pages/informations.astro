---
import Layout from '../layouts/Layout.astro';
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';
import {
  contentfulClient,
  InformationContentfulInterface
} from '../lib/contentful';
import { NavigationLayoutEnum } from '../types/enum';

const informationEntry =
  await contentfulClient.getEntries<InformationContentfulInterface>({
    content_type: 'information-rich-text'
  });

const informationContent = documentToHtmlString(
  informationEntry.items[0].fields.informationRichText
);
---

<Layout layout={NavigationLayoutEnum.SECONDARY}>
  <section slot="main" set:html={informationContent} />
</Layout>

<style is:global>
  p a {
    @apply cursor-pointer  underline;
  }
</style>

<style>
  section {
    @apply prose mt-8 dark:prose-invert;
  }
</style>
