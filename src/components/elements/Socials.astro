---
interface SocialNetworkInterface {
  title: string;
  icon: HTMLElement;
}

import {
  contentfulClient,
  SocialNetworkContentfulInterface
} from '../../lib/contentful';

const socialLinksEntries =
  await contentfulClient.getEntries<SocialNetworkContentfulInterface>({
    content_type: 'socialNetwork'
  });

const socialLinks: Array<SocialNetworkContentfulInterface> =
  socialLinksEntries.items.map((n) => {
    const { title, url } = n.fields;
    return { title, url };
  });
